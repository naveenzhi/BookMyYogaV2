@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="related-products-grid">
        <div class="title panel-heading">
             <h2>@T("Products.RelatedProducts")</h2>
        </div>
        <div class="row">
            @if (Model.Count <= 3)
            {    
                foreach (var item in Model)
                {
                    <div class="item-box product-grid col-xs-12 col-sm-4 col-md-4 product-align clearfix">
                        <div class="thumbnail">
                            @Html.Partial("_ProductBox", item)
                        </div>
                    </div>
                }
            }
            else
            {
                <div id="related-products-slider" class="related-products-slider">
                    @foreach (var item in Model)
                    {
                        <div class="item-box product-grid col-xs-12 col-sm-12 col-md-12 product-align clearfix">
                            <div class="thumbnail">@Html.Partial("_ProductBox", item)</div>
                        </div>
                    }
                </div>
            }
        </div>
    </div> 
}